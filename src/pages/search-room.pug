extends ../templates/main.pug
include ../bundles/search-room.bundle.pug

block variable
    - var title = 'Search room';

block main
    .container.main-wrap
        section.filters
            +dropdown-calendar({
                dataRange: true,
                items: [
                    {label: 'Даты пребывания в отеле', id: 'start', class: 'date-start'}, 
                ],
            })
            +dropdown-list({
                title:  'Гости', 
                type:   'guest', 
                text:   'Сколько гостей', 
                items:  ['взрослые', 'дети', 'младенцы'],
            })(class= "filters__guest")
            +range-slider({
                title: 'диапазон цены',
                desc: 'Стоимость за сутки пребывания в номере'
            })
            +checkbox-list({
                title:  'правила дома',
                type:   'standart',
                icon:   false,
                items:  [
                            {name: 'Можно курить', id: 'id-1'}, 
                            {name: 'Можно с питомцами', id: 'id-2'},
                            {name: 'Можно пригласить гостей (до 10 человек)', id: 'id-3'}
                        ]
            })
            +checkbox-list({
                title:  'доступность',
                type:   'standart',
                icon:   false,
                items:  [
                            {title: 'Широкий коридор', name: 'Ширина коридоров в номере не менее 91 см.', id: 'id-10'}, 
                            {title: 'Помощник для инвалидов', name: 'На 1 этаже вас встретит специалист и проводит до номера.', id: 'id-11'}
                        ]
            })(class= "filters__additional-amenities")
            +dropdown-list({
                title:  'Удобства номера', 
                type:   'facilities', 
                text:   'Удобства', 
                items:  ['спальни', 'кровати', 'ванные комнаты']
            })(class= "filters__facilities")
            +checkbox-list({
                title:  'дополнительные удобства',
                type:   'dropwown',
                icon:   true,
                items:  [
                            {name: 'Завтрак', id: 'id-4'}, 
                            {name: 'Письменный стол', id: 'id-5'}, 
                            {name: 'Стул для кормления', id: 'id-6'}, 
                            {name: 'Кроватка', id: 'id-7'}, 
                            {name: 'Телевизор', id: 'id-8'}, 
                            {name: 'Шампунь', id: 'id-9'}, 
                        ]
            })
        section.main-content
            .main-title.h1 Номера, которые мы для вас подобрали
            .rooms
            +pagination
            

            